<div class="container py-4">
  <h1 class="mb-4 text-left h4">Berita Terkini</h1>

  <div class="row" id="articleList">
    {{#each articles}}
      <div class="col-12 mb-3">
        <div class="shadow-sm h-100">
          <div class="row g-0 align-items-center">
            <!-- Teks -->
            <div class="col-md-8 col-7 p-3">
              <h5 class="card-title mb-1">
                <a href="{{link}}" target="_blank" class="text-decoration-none text-dark stretched-link">
                  {{title}}
                </a>
              </h5>
              <small class="text-muted d-block mb-2">
                {{source}} â€” {{pubDateStr}}
              </small>
            </div>

            <!-- Gambar -->
            <div class="col-md-4 col-4">
              <img src="/images/article-thumb.jpg" class="img-fluid rounded-end" alt="{{title}}">
            </div>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>
