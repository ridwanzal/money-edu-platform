<div class="container py-4">

  <h1 class="mb-4 text-left h4">Berita Terkini</h1>

  <!-- Search Bar -->
  <div class="search-bar mb-lg-4 mb-3 d-none">
    <input id="searchInput" type="text" class="form-control" placeholder="Search articles...">
  </div>

  <!-- Articles Grid -->
  <div class="row" id="articleList">
    {{#each articles}}
      <div class="col-md-4 col-sm-6 mb-lg-4 mb-3">
        <div class="card h-100 shadow-sm">
          {{!-- {{#if image}}
            <img src="{{image}}" class="card-img-top" alt="Thumbnail">
          {{else}}
            <img src="https://via.placeholder.com/400x180?text=No+Image" class="card-img-top" alt="No Image">
          {{/if}} --}}

          <div class="card-body">
            <h5 class="card-title">
              <a href="{{link}}" target="_blank" class="text-decoration-none">
                {{title}}
              </a>
            </h5>
            <small class="text-muted d-block mb-2">
              {{source}} â€” {{pubDateStr}}
            </small>
            <p class="card-text">
              {{#if contentSnippet}}
                {{#ifCond (gt (len contentSnippet) 120) true}}
                  {{truncate contentSnippet 120}}...
                {{else}}
                  {{contentSnippet}}
                {{/ifCond}}
              {{/if}}
            </p>
          </div>
          <div class="card-footer bg-transparent border-0">
            <a href="{{link}}" target="_blank" class="btn btn-outline-primary btn-sm">
              Read More
            </a>
          </div>
        </div>
      </div>
    {{/each}}
  </div>

</div>
