<div class="container my-3">
  {{#if pdfList.length}}
  {{#each pdfList}}
  <div class="card pdf-card">
    <div class="card-body d-flex justify-content-between align-items-center">
      <div class="pdf-title pe-3">{{title}}</div>
<button
  class="btn btn-primary btn-sm pdf-open-btn"
  data-pdf="{{pdfPath}}"
  data-bs-toggle="modal"
  data-bs-target="#pdfModal">
  Lihat
</button>
    </div>
  </div>
  {{/each}}
  {{else}}
  <div class="alert alert-warning text-center">Tidak ada modul tersedia</div>
  {{/if}}
</div>

<!-- PDF Modal -->
<div class="modal modal-pdf fade" id="pdfModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-fullscreen">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Lihat Modul</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body" style="padding:0; height:80vh;">
        <iframe id="pdfViewer" style="width:100%;height:100%;border:none;"></iframe>
      </div>
    </div>
  </div>
</div>