<div class="container py-4">

  <h1 class="mb-4 text-left h4">Berita Terkini</h1>

  <!-- Search Bar -->
  <div class="search-bar mb-lg-4 mb-3 d-none">
    <input id="searchInput" type="text" class="form-control" placeholder="Search articles...">
  </div>

  <!-- Articles Grid -->
  <div class="row" id="articleList">
    {{#each articles}}
      <div class="col-md-4 col-sm-6 mb-lg-4 mb-3">
        <div class="card h-100 shadow-sm">
          <div class="card-body">
            <h5 class="card-title">
              <a href="{{link}}" target="_blank" class="text-decoration-none text-dark">
                {{title}}
              </a>
            </h5>
            <small class="text-muted d-block mb-2">
              {{source}} â€” {{pubDateStr}}
            </small>
          </div>
          <div class="card-footer bg-transparent border-0 mb-lg-3 mb-2">
            <a href="{{link}}" target="_blank" class="btn d-block btn-outline-secondary btn-sm">
              Read More
            </a>
          </div>
        </div>
      </div>
    {{/each}}
  </div>

</div>
